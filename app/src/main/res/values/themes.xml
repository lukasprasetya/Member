<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Member" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Customize Template -->
    <!-- Title Layer 1 (Bold) -->
    <style name="TextTitle.Bold" parent="Theme.Member">
        <item name="android:textColor">@color/blue_1</item>
        <item name="android:textSize">38sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <!-- Title Layer 2 (Light) -->
    <style name="TextTitle.Light" parent="Theme.Member">
        <item name="android:textColor">@color/blue_1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <!-- Text Description Light -->
    <style name="TextDesc.Light" parent="Theme.Member">
        <item name="android:textColor">@color/black_2</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <!-- Button -->
    <style name="Button" parent="Theme.Member">
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- Button Dialog -->
    <style name="ButtonDialog" parent="Theme.Member">
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>
</resources>